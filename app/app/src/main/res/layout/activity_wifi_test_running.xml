<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_bg"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/roomNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing Wi-Fi in "
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please stand still while testing..."
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/speedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: 0 Mbps"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/latencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latency: 0 ms"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/jitterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jitter: 0 ms"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/packetLossText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Packet Loss: 0%"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/strengthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Strength: 0 dBm"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#FFA0D7"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp" />

    </LinearLayout>
</ScrollView>
