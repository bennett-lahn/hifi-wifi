<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light creamy background -->
    <solid android:color="#FFFFF7" />

    <!-- Rounded corners for the tab look -->
    <corners android:radius="20dp" />

    <!-- Soft grayish-beige border -->
    <stroke
        android:width="2dp"
        android:color="#D4D4C1" />

    <!-- Internal padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
