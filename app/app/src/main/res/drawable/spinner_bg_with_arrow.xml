<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="#FFA0D7" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="36dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Pink arrow on right -->
    <item
        android:right="12dp"
        android:gravity="center_vertical|end">
        <bitmap
            android:src="@drawable/ic_arrow_down_pink"
            android:gravity="center_vertical|end" />
    </item>

</layer-list>
